<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/phishing_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PhishingActivity"
    tools:showIn="@layout/activity_phishing"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="80dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/titulo_phishing"
            android:textAlignment="center"
            android:textColor="@color/editTextColorBlack"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/instruccion_phishing"
            android:textAlignment="center"
            android:textColor="@color/editTextColorBlack"
            android:textSize="25sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <VideoView
                android:id="@+id/video_view_phishing"
                android:layout_width="match_parent"
                android:layout_height="250dp" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/phishing_explanatory_paragraph"
            android:textAlignment="center"
            android:textColor="@color/editTextColorBlack"
            android:textSize="25sp" />

        <Button
            android:id="@+id/aprende_mas_sobre_phishing_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="aprendeMasSobrePhishing"
            android:text="@string/boton_aprende_mas_sobre_phishing"
            android:theme="@style/RaisedButtonDark" />

        <Button
            android:id="@+id/prueba_tus_conocimientos_phishing_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="pruebaTusConocimientosSobrePhishing"
            android:text="@string/test_your_phishing_knowledge"
            android:theme="@style/RaisedButtonDark" />

    </LinearLayout>

</ScrollView>