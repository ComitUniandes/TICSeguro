<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:fillViewport="false"
    android:id="@+id/profile_scroll_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="60dp"
            android:text="@string/nombre_usuario"
            android:textAlignment="center"
            android:textColor="@color/editTextColorBlack"
            android:textSize="30sp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_avatar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:src="@drawable/ic_user_default_avatar"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/instruccion_avatar"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="@color/editTextColorBlack"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"/>

        <TextView
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/texto_progreso"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="@color/editTextColorBlack"
            android:paddingTop="@dimen/activity_vertical_margin"/>

        <TextView
            android:id="@+id/phishing_module"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="@string/titulo_leccion_phishing"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/editTextColorBlack"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/determinateBarPhishing"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:progress="10"
            android:layout_gravity="center"
            android:progressBackgroundTint="@color/colorTarjetaTips"
            android:progressTint="@color/colorPrimary"/>

        <TextView
            android:id="@+id/social_networks_module"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="@string/titulo_leccion_redes_sociales"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/editTextColorBlack"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/determinateBarRedesSociales"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:progress="10"
            android:layout_gravity="center"
            android:progressBackgroundTint="@color/colorTarjetaTips"
            android:progressTint="@color/colorPrimary"/>

        <TextView
            android:id="@+id/internet_module"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="@string/titulo_leccion_internet"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/editTextColorBlack"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/determinateBarInternet"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:progress="0"
            android:layout_gravity="center"
            android:progressBackgroundTint="@color/colorTarjetaTips"
            android:progressTint="@color/colorPrimary"/>

        <TextView
            android:id="@+id/leccion_contrasenas"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="@string/titulo_leccion_contrasenas"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/editTextColorBlack"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/determinateBarContrasenas"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:progress="0"
            android:layout_gravity="center"
            android:progressBackgroundTint="@color/colorTarjetaTips"
            android:progressTint="@color/colorPrimary"/>

    </LinearLayout>

</ScrollView>