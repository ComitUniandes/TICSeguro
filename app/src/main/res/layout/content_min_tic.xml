<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mintic_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MinTICActivity"
    tools:showIn="@layout/activity_min_tic">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="80dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:text="@string/titulo_min_tic"
            android:textAlignment="center"
            android:textColor="@color/editTextColorBlack"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="335dp"
            android:layout_height="218dp"
            android:layout_gravity="center"
            android:src="@drawable/mintic" />

        <TextView
            android:id="@+id/descripcion_mintic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:text="@string/descripcion_mintic"
            android:textAlignment="viewStart"
            android:textColor="@color/editTextColorBlack"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/link_min_tic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:text="@string/link_min_tic"
            android:textAlignment="viewStart"
            android:textColor="@color/editTextColorBlack"
            android:textSize="20sp" />

    </LinearLayout>

</ScrollView>