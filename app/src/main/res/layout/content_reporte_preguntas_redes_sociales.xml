<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reporte_redes_sociales_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ReportePreguntasRedesSocialesActivity"
    tools:showIn="@layout/activity_reporte_preguntas_redes_sociales">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulo_reporte_preguntas_redes_sociales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_top_titulo_phishing"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:text="@string/titulo_reporte_preguntas_redes_sociales"
            android:textAlignment="center"
            android:textColor="@color/editTextColorBlack"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif_reporte_preguntas_redes_sociales"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/muy_bien"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/activity_vertical_margin"
            />

        <TextView
            android:id="@+id/descripcion_reporte_preguntas_redes_sociales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:text="@string/descripcion_reporte_preguntas_redes_sociales"
            android:textAlignment="center"
            android:textColor="@color/editTextColorBlack"
            android:textSize="20sp" />

        <Button
            android:id="@+id/boton_volver_a_redes_sociales_desde_reporte_redes_sociales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:onClick="seguirAprendiendo"
            android:text="@string/boton_volver_a_redes_sociales_desde_reporte_redes_sociales"
            android:theme="@style/RaisedButtonDark" />

        <Button
            android:id="@+id/boton_volver_a_inicio_desde_reporte_redes_sociales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:onClick="volverAInicio"
            android:text="@string/boton_volver_a_inicio_desde_reporte_redes_sociales"
            android:theme="@style/RaisedButtonDark" />

    </LinearLayout>

</ScrollView>