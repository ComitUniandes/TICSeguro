<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/superintendencia_industria_comercio_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SuperintendenciaIndustriaComercioActivity"
    tools:showIn="@layout/activity_superintendencia_industria_comercio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="80dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:text="@string/titulo_superintendencia_industria_comercio"
            android:textAlignment="center"
            android:textColor="@color/editTextColorBlack"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="335dp"
            android:layout_height="218dp"
            android:layout_gravity="center"
            android:src="@drawable/superintendencia_de_industria_y_comercio" />

        <TextView
            android:id="@+id/descripcion_superintendencia_industria_comercio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:text="@string/descripcion_superintendencia_industria_comercio"
            android:textAlignment="viewStart"
            android:textColor="@color/editTextColorBlack"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/link_superintendencia_industria_comercio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:text="@string/link_superintendencia_industria_comercio"
            android:textAlignment="viewStart"
            android:textColor="@color/editTextColorBlack"
            android:textSize="20sp" />

    </LinearLayout>

</ScrollView>