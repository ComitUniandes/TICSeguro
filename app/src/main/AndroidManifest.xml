<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.japg.ticseguro">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".view.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.MainMenuActivity" />
        <activity
            android:name=".view.PhishingActivity"
            android:label="@string/title_activity_phishing"
            android:parentActivityName=".view.MainMenuActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.MainMenuActivity" />
        </activity>
        <activity
            android:name=".view.PruebaTusConocimientosPhishingActivity"
            android:label="@string/title_activity_prueba_tus_conocimientos_phishing"
            android:parentActivityName=".view.MainMenuActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".view.AprendeMasPhishingActivity"
            android:label="@string/title_activity_aprende_mas_phishing"
            android:parentActivityName=".view.MainMenuActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.SocialNetworksActivity"
            android:label="@string/title_activity_social_networks"
            android:parentActivityName=".view.MainMenuActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.MainMenuActivity" />
        </activity>
        <activity
            android:name=".view.InternetActivity"
            android:label="@string/title_activity_internet"
            android:parentActivityName=".view.MainMenuActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.MainMenuActivity" />
        </activity>
    </application>

</manifest>